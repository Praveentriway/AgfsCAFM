<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_logo"
        android:visibility="gone"
        style="@style/match_wrap_style"
        android:background="@color/colorWhite"
        android:src="@drawable/emco_logo_with_name"/>

    <!-- our tablayout to display tabs  -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_preventive_maintenance"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:tabIndicatorColor="@color/colorWhite"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabTextColor="@color/secondary_text" />

    <!-- View pager to swipe views -->
    <com.daemon.emco_android.components.CustomViewPager
        android:id="@+id/vp_preventive_maintenance"
        style="@style/match_parent_style" />

</LinearLayout>