    <!--<include layout="@layout/toolbar"
        android:visibility="visible"/>-->
    <FrameLayout
        android:id="@+id/frame_container"
        style="@style/match_parent_style">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:scaleType="fitXY"
            android:src="@drawable/landing_page" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_common_splash"
            android:gravity="center"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_40sdp"
            android:paddingRight="@dimen/_40sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="@string/lbl_login"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/bg_btn_common_splash"
            android:gravity="center"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_35sdp"
            android:paddingRight="@dimen/_35sdp"
            android:paddingTop="@dimen/_10sdp"
            android:text="@string/lbl_signup"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/_2sdp"
        android:visibility="visible"
        android:layout_marginRight="@dimen/_10sdp"

        android:orientation="vertical">

        <TextView
            style="@style/match_wrap_style"
            android:text="@string/lbl_2017_ags"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_6sdp" />

        <TextView
            style="@style/match_wrap_style"
            android:text="@string/lbl_version"
            android:textAlignment="center"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_5sdp" />
    </LinearLayout>


</RelativeLayout>
