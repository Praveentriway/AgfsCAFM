<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/scroll_bar"
    android:fillViewport="true">


        <LinearLayout
            android:id="@+id/ll_title"
            style="@style/match_wrap_style"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_receivecomplaint_title"
                style="@style/match_wrap_style"
                android:layout_below="@+id/sv_rc_search"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_border_black_strole"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_end_date"
                    style="@style/btn_wrap_content_gray"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/ppm_finding" />

                <EditText
                    android:id="@+id/edt_ppmfinding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_gray"
                    android:gravity="left|top"
                    android:lines="4" />

            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap_style"
                android:layout_below="@+id/sv_rc_search"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_border_black_strole"
                android:orientation="vertical">


                <TextView
                    style="@style/btn_wrap_content_gray"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/ppm_recommedation" />

                <EditText
                    android:id="@+id/edt_ppmrecommedation"
                    android:layout_width="match_parent"
                    android:textColor="@color/color_gray"
                    android:layout_height="match_parent"
                    android:gravity="left|top"
                    android:lines="4" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            style="@style/btn_wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/lbl_save"
            android:visibility="visible" />
</RelativeLayout>