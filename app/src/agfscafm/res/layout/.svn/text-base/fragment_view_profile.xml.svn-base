<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_parent_style"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        style="@style/match_parent_style"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/match_parent_style"
            android:background="@color/colorWhite">

            <LinearLayout
                style="@style/match_parent_style"
                android:layout_marginBottom="@dimen/bottom_view_margin"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginRight="@dimen/_45sdp"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_firtname"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_firstname" />

                    <TextView
                        android:id="@+id/tv_firstname"
                        style="@style/textview_bg_border"
                        android:layout_weight=".3" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_lastname"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_lastname" />

                    <TextView
                        android:id="@+id/tv_lastname"
                        style="@style/textview_bg_border"
                        android:layout_weight=".3" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_emailid"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_email_id" />

                    <TextView
                        android:id="@+id/tv_emailid"
                        style="@style/textview_bg_border"
                        android:layout_weight=".3" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_phoneno"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_phone_no" />

                    <TextView
                        android:id="@+id/tv_phoneno"
                        style="@style/textview_bg_border"
                        android:layout_weight=".3" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_mobileno"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_mobile_no" />

                    <TextView
                        android:id="@+id/tv_mobileno"
                        style="@style/textview_bg_border"
                        android:layout_weight=".3" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_usertype"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_user_type" />

                    <TextView
                        android:id="@+id/tv_usertype"
                        style="@style/textview_bg_border"
                        android:layout_weight=".3" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/colorWhite"
                android:src="@drawable/emco_logo_with_name" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    style="@style/match_wrap_style"
                    android:text="@string/lbl_2017_ags"
                    android:textAlignment="center"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    style="@style/match_wrap_style"
                    android:text="@string/lbl_version"
                    android:textAlignment="center"
                    android:textSize="@dimen/_5sdp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>