<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_parent_style"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_margin="@dimen/_2sdp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:src="@drawable/emco_logo_with_name" />

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pieChart"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lbl_zone_area"
            style="@style/textview_label"
            android:layout_weight="1"
            android:gravity="left"
            android:text=" zone prop dsfwdfrwrefwfwfwfewfwfwfewfwe wevfr3 f vfewrfwrfwfw" />

        <TextView
            android:id="@+id/tv_lbl_chartdetails"
            style="@style/textview_label"
            android:layout_weight="1"
            android:gravity="right"
            android:text="revrevrevervrev fvrefvr fdvfdvfevr3 12.02.17 to 23.03.17 by zone" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_logo"
        android:layout_below="@+id/ll_title"
        android:layout_margin="@dimen/_2sdp" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@color/colorWhite"
        android:src="@drawable/emco_logo_with_name"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            style="@style/match_wrap_style"
            android:text="@string/lbl_2017_ags"
            android:textAlignment="center"
            android:textSize="@dimen/_6sdp" />

        <TextView
            style="@style/match_wrap_style"
            android:text="@string/lbl_version"
            android:textAlignment="center"
            android:textSize="@dimen/_5sdp" />
    </LinearLayout>
</RelativeLayout>