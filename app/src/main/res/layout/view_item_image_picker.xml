<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_root"
    style="@style/match_wrap_style"
    android:layout_margin="@dimen/space_layout_margin"
    android:background="@drawable/image_picker_background"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:id="@+id/iv_list"
            style="@style/match_parent_style"
            app:srcCompat="@drawable/ic_camera_24dp" />

        <ImageView
            android:id="@+id/imgQueueMultiSelected"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/color_gray"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:scaleType="center"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>

