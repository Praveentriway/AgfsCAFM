<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    card_view:cardCornerRadius="3dp"

    android:padding="@dimen/_10sdp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        style="@style/match_wrap_style"

        android:id="@+id/linear_main"
       >

    <LinearLayout
        style="@style/match_wrap_style"
        android:layout_margin="@dimen/_5sdp"

        android:orientation="horizontal">

        <!--<TextView
            android:id="@+id/tv_ppm_service"
            style="@style/textview_label_check"
            android:layout_gravity="left"
            android:gravity="left|center"
            android:layout_weight="1"
            android:visibility="invisible"
            android:text="General" />-->

        <TextView
            android:id="@+id/tv_description"
            style="@style/textview_label_check2"
            android:layout_gravity="center"
            android:layout_weight=".8"
            android:gravity="center|left"
            android:textColor="@color/checklist_text"
            android:text="test" />

        <EditText
            android:id="@+id/edt_remark"
            style="@style/edit_searchview_check"
            android:layout_gravity="left"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/edt_status"
            style="@style/textview_label"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_down_spin"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/checklist_text"
            android:text="@string/lbl_select" />
    </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>