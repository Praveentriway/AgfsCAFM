<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_parent_style"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        style="@style/match_wrap_style"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_3sdp"
            android:visibility="gone"
            android:contentDescription="@string/app_name"
            android:src="@drawable/emco_logo_with_name" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/match_parent_style">

            <LinearLayout
                style="@style/match_parent_style"
                android:layout_marginBottom="@dimen/bottom_view_margin"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_job_no"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_job_no" />

                    <TextView
                        android:id="@+id/tv_select_job_no"
                        style="@style/textview_spinner"
                        android:layout_weight=".3"
                        android:text="@string/lbl_select_job_no" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_site"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_site_name" />

                    <TextView
                        android:id="@+id/tv_select_site"
                        style="@style/textview_spinner"
                        android:layout_weight=".3"
                        android:text="@string/lbl_select_site" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_zone_area"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_zone_area" />

                    <TextView
                        android:id="@+id/tv_select_zone_area"
                        style="@style/textview_spinner"
                        android:layout_weight=".3"
                        android:text="@string/lbl_select_zone" />
                </LinearLayout>
                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_building"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_building" />

                    <TextView
                        android:id="@+id/tv_select_building"
                        style="@style/textview_spinner"
                        android:layout_weight=".3"
                        android:text="@string/lbl_select_building" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_from_date"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_from_date" />

                    <TextView
                        android:id="@+id/tv_select_from_date"
                        style="@style/textview_calendar"
                        android:layout_weight=".3"
                        android:text="@string/lbl_select_from_date" />
                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_to_date"
                        style="@style/textview_label"
                        android:layout_weight=".6"
                        android:text="@string/lbl_to_date" />

                    <TextView
                        android:id="@+id/tv_select_to_date"
                        style="@style/textview_calendar"
                        android:layout_weight=".3"
                        android:text="@string/lbl_select_to_date" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnSearch"
                        style="@style/btn_common"
                        android:text="@string/lbl_search" />
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_2sdp"
                android:background="@color/colorWhite"
                android:src="@drawable/emco_logo_with_name"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    style="@style/match_wrap_style"
                    android:text="@string/lbl_2017_ags"
                    android:textAlignment="center"
                    android:textSize="@dimen/_6sdp" />

                <TextView
                    style="@style/match_wrap_style"
                    android:text="@string/lbl_version"
                    android:textAlignment="center"
                    android:textSize="@dimen/_5sdp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
