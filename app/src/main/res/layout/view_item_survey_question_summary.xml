<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/_1sdp"
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:src="@drawable/ic_five_start"
        />

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="@dimen/_1sdp"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/match_wrap_style"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <View
                android:background="@color/colorPrimary"
                android:layout_width="3.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
               />
            <LinearLayout

                style="@style/match_wrap_style"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout

                    style="@style/match_wrap_style"
                    android:weightSum="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_sno"
                        style="@style/textview_label"
                        android:layout_weight="0.94"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:text="99."
                        android:textColor="@color/checklist_text"
                        android:gravity="center"

                        />

                    <TextView
                        android:id="@+id/tv_survey_ques"
                        android:layout_weight=".2"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        style="@style/textview_label"
                        android:layout_height="wrap_content"
                        fontPath="fonts/HelveticaBold.otf"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center"
                        android:textColor="@color/color_gray_new"
                        android:layout_gravity="center_vertical"
                        android:text="How would you rate our staff's general cleaning and house of branches/ Offices ?"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/match_wrap_style"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:weightSum="4"

                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/radiogroup_ppe"
                        style="@style/match_wrap_style"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rd_1"
                            style="@style/radio_button_common_survey"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/excellent_smiley"
                            android:layout_weight="1"
                            android:text="  1"
                            />
                        <RadioButton
                            android:id="@+id/rd_2"
                            style="@style/radio_button_common_survey"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/good_smiley"
                            android:text="  2"
                            />
                        <RadioButton
                            android:id="@+id/rd_3"
                            style="@style/radio_button_common_survey"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/satisfactory_smiley"
                            android:textSize="@dimen/_10sdp"
                            android:text="  3"
                            />
                        <RadioButton
                            android:id="@+id/rd_4"
                            style="@style/radio_button_common_survey"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/expectation_smiley"
                            android:textSize="@dimen/_10sdp"
                            android:text="  4"
                            />
                        <RadioButton
                            android:id="@+id/rd_5"
                            style="@style/radio_button_common_survey"
                            android:layout_width="wrap_content"
                            android:button="@drawable/poor_smiley"
                            android:textSize="@dimen/_10sdp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:text="  1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/radiogroup_ppe2"
                        style="@style/match_wrap_style"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rd_6"
                            style="@style/radio_button_common_survey"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/_9sdp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/ic_simily_nice"
                            android:layout_weight="1"
                            android:text="  2"
                            />
                        <RadioButton
                            android:id="@+id/rd_7"
                            style="@style/radio_button_common_survey"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/ic_simily_nice"
                            android:text="  3"
                            />
                        <RadioButton
                            android:id="@+id/rd_8"
                            style="@style/radio_button_common_survey"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:button="@drawable/ic_simily_nice"
                            android:textSize="@dimen/_9sdp"
                            android:text="  4"
                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/icon_play"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="326dp"
        android:layout_marginLeft="326dp"
        android:layout_marginTop="-9dp"
        android:layout_marginEnd="325dp"
        android:elevation="10dp"
        android:gravity="center" />
</LinearLayout>

</RelativeLayout>