<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    tools:ignore="MissingPrefix"
    android:layout_height="match_parent"
    android:background="@drawable/bg_re3"
    android:paddingTop="@dimen/_5sdp">

    <RelativeLayout
        style="@style/match_parent_style"
        >

        <ScrollView style="@style/match_parent_style">

            <LinearLayout
                android:id="@+id/layout_main"
                style="@style/match_parent_style"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/bottom_view_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear_fromdate"
                    style="@style/match_wrap_style"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_lbl_from_date"
                        style="@style/textview_label"
                        fontPath="fonts/HelveticaBold.otf"
                        android:layout_weight=".6"
                        android:text="Date" />

                    <TextView
                        android:id="@+id/tv_select_from_date"
                        style="@style/textview_calendar"
                        fontPath="fonts/HelveticaRegular.otf"
                        android:layout_weight=".4"
                        android:text="Select Date" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    android:background="@color/colorFormMasterElementBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear1"
                    android:layout_marginTop="@dimen/_5sdp"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            fontPath="fonts/HelveticaBold.otf"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_lbl_opco"
                            android:text="Opco"
                            android:textSize="@dimen/elementTextTitleSize"
                            android:padding="16dp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="@color/secondary_text"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:background="@color/colorFormMasterHeaderBackground2">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                style="@style/textview_spinner_filter"
                                android:textSize="@dimen/elementTextValueSize"
                                android:id="@+id/tv_select_opco"
                                android:inputType="textNoSuggestions"
                                android:maxLines="1"
                                android:layout_gravity="center_vertical"
                                android:text="Select the opco"
                                android:imeOptions="actionNext"
                                android:padding="16dp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    android:background="@color/colorFormMasterElementBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    card_view:cardCornerRadius="0dp"
                    android:id="@+id/linear2"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            fontPath="fonts/HelveticaBold.otf"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_lbl_contract_no"
                            android:text="Contract No"
                            android:textSize="@dimen/elementTextTitleSize"
                            android:padding="16dp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="@color/secondary_text"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:background="@color/colorFormMasterHeaderBackground2">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                style="@style/textview_spinner_filter"
                                android:textSize="@dimen/elementTextValueSize"
                                android:id="@+id/tv_select_contract"
                                android:text="Select the Job Name"
                                android:inputType="textNoSuggestions"
                                android:maxLines="1"
                                android:layout_gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:padding="16dp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    android:background="@color/colorFormMasterElementBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            fontPath="fonts/HelveticaBold.otf"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_lbl_zone"
                            android:text="Zone"
                            android:textSize="@dimen/elementTextTitleSize"
                            android:padding="16dp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="@color/secondary_text"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:background="@color/colorFormMasterHeaderBackground2">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                style="@style/textview_spinner_filter"
                                android:textSize="@dimen/elementTextValueSize"
                                android:id="@+id/tv_select_zone"
                                android:text="Select the Zone"
                                android:inputType="textNoSuggestions"
                                android:maxLines="1"
                                android:layout_gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:padding="16dp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:orientation="vertical"
                    android:background="@color/colorFormMasterElementBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    card_view:cardCornerRadius="0dp"
                    card_view:cardElevation="4dp"
                    card_view:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="3.5dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorPrimary" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_weight="2.5"
                            android:gravity="center"
                            fontPath="fonts/HelveticaBold.otf"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_lbl_building"
                            android:text="Building Name"
                            android:textSize="@dimen/elementTextTitleSize"
                            android:padding="16dp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="@color/secondary_text"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:background="@color/colorFormMasterHeaderBackground2">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                style="@style/textview_spinner_filter"
                                android:textSize="@dimen/elementTextValueSize"
                                android:id="@+id/tv_select_building"
                                android:text="Select the Building Name"
                                android:inputType="textNoSuggestions"
                                android:maxLines="1"
                                android:layout_gravity="center_vertical"
                                android:imeOptions="actionNext"
                                android:padding="16dp"
                                android:textColor="@color/colorPrimary"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/_2sdp"
            android:background="@color/colorWhite"
            android:src="@drawable/emco_logo_with_name"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                style="@style/match_wrap_style"
                android:text="@string/lbl_2017_ags"
                fontPath="fonts/HelveticaRegular.otf"
                android:textAlignment="center"
                android:textSize="@dimen/_6sdp" />

            <TextView
                style="@style/match_wrap_style"
                android:text="@string/lbl_version"
                android:textAlignment="center"
                fontPath="fonts/HelveticaRegular.otf"
                android:textSize="@dimen/_5sdp" />
        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_fetch_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:visibility="gone"
        android:src="@drawable/baseline_gps_fixed_white_48" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
