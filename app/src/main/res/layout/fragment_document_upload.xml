<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    tools:ignore="MissingPrefix"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_10sdp">
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/match_parent_style"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
            style="@style/match_parent_style"
            android:orientation="vertical">

        <LinearLayout
            style="@style/match_wrap_style"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_header"
                style="@style/btn_wrap_content_gray2"
                android:layout_gravity="center"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="@dimen/_7sdp"
                android:text="@string/building_zone_floor_flat_sub_location" />

        </LinearLayout>

            <RelativeLayout
                style="@style/match_parent_style"
                android:background="@color/colorWhite">

                <LinearLayout
                    style="@style/match_parent_style"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:orientation="vertical">


                    <FrameLayout
                        android:id="@+id/add_image_container"
                        android:layout_width="fill_parent"
                        android:layout_height="85dp"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/dotted_border">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/elementTextTitleSize"
                                android:src="@drawable/add_black"
                                android:id="@+id/img_thums"
                                />
                            <TextView
                                android:id="@+id/tv_img_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@color/color_blue"
                                android:text="Upload Document" />
                        </LinearLayout>





                    </FrameLayout>

                    <androidx.cardview.widget.CardView
                        android:orientation="vertical"
                        android:background="@color/colorFormMasterElementBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        card_view:cardCornerRadius="0dp"
                        android:visibility="gone"
                        card_view:cardElevation="4dp"
                        card_view:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:backgroundTint="@color/colorPrimary"
                                android:layout_width="3.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="16dp"
                                android:background="@color/colorFormMasterDivider" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="2.5"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_lbl_no"
                                android:text="Work Type - Complaint No"
                                android:textSize="@dimen/elementTextTitleSize"
                                android:padding="16dp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:textColor="@color/secondary_text"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:background="@color/colorFormMasterHeaderBackground2">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_horizontal"
                                    android:textSize="@dimen/elementTextValueSize"
                                    android:id="@+id/tv_no"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:layout_gravity="center_vertical"
                                    android:text="REACTIVE - 656345646"
                                    android:padding="16dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimary"/>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                    <androidx.cardview.widget.CardView
                        android:orientation="vertical"
                        android:background="@color/colorFormMasterElementBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="4dp"
                        card_view:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <View
                                android:backgroundTint="@color/colorPrimary"
                                android:layout_width="3.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="16dp"
                                android:background="@color/colorFormMasterDivider" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="2.5"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_lbl_doctype"
                                android:gravity="center"
                                android:text="Document Type"
                                android:textSize="@dimen/elementTextTitleSize"
                                android:padding="16dp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:textColor="@color/secondary_text"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:background="@color/colorFormMasterHeaderBackground2">
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/textview_spinner_filter"
                                    android:textSize="@dimen/elementTextValueSize"
                                    android:id="@+id/tv_select_docType"
                                    android:inputType="textNoSuggestions"
                                    android:maxLines="1"
                                    android:layout_gravity="center_vertical"
                                    android:text="Select Document Type"
                                    android:imeOptions="actionNext"
                                    android:padding="16dp"
                                    android:textColor="@color/colorPrimary"/>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>






                    <androidx.cardview.widget.CardView
                        android:orientation="vertical"
                        android:background="@color/colorFormMasterElementBackground"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_85sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="4dp"
                        card_view:cardUseCompatPadding="true">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <View
                                android:backgroundTint="@color/colorPrimary"
                                android:layout_width="3.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="16dp"
                                android:background="@color/colorFormMasterDivider" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_weight="2.5"
                                android:id="@+id/tv_remarks"
                                android:layout_gravity="center_vertical"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Remarks"
                                android:textSize="@dimen/elementTextTitleSize"

                                android:padding="16dp"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:textColor="@color/secondary_text"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="match_parent"
                                android:background="@color/colorFormMasterHeaderBackground2">
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:textSize="@dimen/elementTextValueSize"
                                    android:maxLength="500"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/tie_remarks"
                                    android:hint="Add your remarks"
                                    android:imeOptions="actionDone"
                                    android:padding="16dp"
                                    android:textColor="@color/colorPrimary"/>
                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_85sdp"
                        android:layout_marginLeft="@dimen/_80sdp"
                        android:layout_marginRight="@dimen/_80sdp"
                        android:visibility="gone"
                        android:gravity="center|center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <LinearLayout
                            style="@style/match_wrap_style"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="89dp"
                                android:layout_height="47dp"
                                android:layout_gravity="center"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:text="Document Upload" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_15sdp"
                                android:layout_weight="0.6"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/img_upload_count"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0/3 Image Uploaded"
                                    android:visibility="gone"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_7sdp"/>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/custom_refresh_recycler_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"/>

                            </LinearLayout>


                            <Button
                                android:id="@+id/btn_save"
                                style="@style/btn_wrap_content_red"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:paddingLeft="@dimen/_30sdp"
                                android:visibility="gone"
                                android:paddingRight="@dimen/_30sdp"
                                android:text="@string/lbl_save" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_upload_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/save" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
